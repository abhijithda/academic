/* 	Name : ABHIJITH D.A.	Reg.no : 1PI01IS001

6b>.	Write a C program to prompt user for the name of an environment 
	variable and print its value if it is defined and a suitable message 
	otherwise; and to repeat the process if user wants it.
*/

	#include<stdio.h>
	#include<sys/types.h>
	#include<stdlib.h>
	#include<string.h>
	
	int main()
	{
	 char *x,*envname,*envalue,temp[20];
	 int c=1;
	 while(c!=0)
	 {
	  printf("\n Enter environment variable name : ");
	  scanf("%s",temp);
	  envname=(char *)malloc(sizeof(temp));
	  strcpy(envname,temp);
	  envalue=getenv(envname);
	  printf("\n Environment value = %s ",envalue);
	  printf("\n Continue(1->yes/0->no) : ");
	  scanf("%d",&c);
	 }
	 return(0);
	}
	~
	~
	"6b.c" 22L, 442C
